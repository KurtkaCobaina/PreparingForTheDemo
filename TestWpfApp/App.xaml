<Application x:Class="TestWpfApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TestWpfApp"
             StartupUri="Windows/LoginWindow.xaml">
    <Application.Resources>
        <!--Глобальные стили (Пишешь здесь и сразу применяются ко всем элементам выбраноого типа)-->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#39FF14"/>
            <Setter Property="Foreground" Value="#0B0B0B"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#39FF14"/>
            <Setter Property="Foreground" Value="#0B0B0B"/>
        </Style>
        <Style TargetType="Label">

            <Setter Property="Foreground" Value="#39FF14"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#39FF14"/>
            <Setter Property="Foreground" Value="#0B0B0B"/>
        </Style>
      
            <!--Стили которые работают по ключу (Пишешь здесь и потом применяешь где надо в приложении по ключу)-->
        <Style x:Key="CustomBackground" TargetType="Window">
            <Setter Property="Background" Value="#0B0B0B"/>
        </Style>
        <Style x:Key="DataGridStyles" TargetType="DataGrid">
            <Setter Property="Background" Value="#0B0B0B"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="TextBlockStyles">
            <Setter Property="Foreground" Value="#39FF14"/>
        </Style>
    </Application.Resources>
</Application>
