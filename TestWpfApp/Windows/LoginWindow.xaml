<Window x:Class="TestWpfApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:easy="clr-namespace:EasyCaptcha.Wpf;assembly=EasyCaptcha.Wpf"
        xmlns:local="clr-namespace:TestWpfApp"
        mc:Ignorable="d"
        Title="LoginWindow" MinHeight="420" MinWidth="400" Height="420" Width="400" MaxHeight="840" MaxWidth="800" WindowStartupLocation="CenterScreen" Style="{StaticResource CustomBackground}">
    <Grid>
        <Grid>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Content="Авторизация" FontSize="36" HorizontalAlignment="Center"/>
                <Label Content="Логин"/>
                <TextBox x:Name="LoginTextBox"/>
                <Label Content="Пароль"/>
                <TextBox x:Name="PasswordTextBox"/>
                <Label Content="Запомнить меня"/>
                <CheckBox Content="Запомнить меня" Foreground="#39FF14" x:Name="RememberMe"/>
                <Label Content="Каптча"/>
                
                <easy:Captcha x:Name="MyCaptcha"/>
                <TextBox x:Name="CaptchaTextBox" />
                <Button Content="Войти" Margin="0,10,0,0" Width="300" Height="30" Click="Button_Click"/>
                <Button Content="Гостевой вход" Margin="0,10,0,0" Width="300" Height="30" Click="GuestLoginButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
